{
  "name": "osclass/classified-ads",
  "description": "Lightweight classified ads platform inspired by Osclass",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-gd": "*",
    "stripe/stripe-php": "^13.0",
    "paypal/rest-api-sdk-php": "^1.14"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Plugins\\": "plugins/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "post-install-cmd": [
      "@php -r \"file_exists('config/config.php') || copy('config/config.sample.php', 'config/config.php');\""
    ]
  }
}

